; test branch instructions
; should run indefinitely, without halting due to sys call

	.text
  lex $sp, 0xFF ; load stack pointer
  br end ; take this branch
  sys
  sys
  sys
start:
	lex $1, 0x00
  brt $1, sysCall ; don't take this branch
  brf $1, lab ; take this branch
  sys
  sys
  sys
sysCall:
  sys
  sys
  sys
lab:
  lex $1, 0xFF
  brf $1, sysCall ; don't take this branch
  brt $1, start ; take this branch
  sys
  sys
  sys
end:
  br start ; take this branch
  sys
  sys
  sys
